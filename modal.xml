<Page xmlns="http://www.nativescript.org/tns.xsd"
  shownModally="onShownModally"
  loaded="onLoaded">
  <StackLayout>
    <GridLayout rows="auto" columns="75,*,75" class="action-bar m-10">
      <Button text="Close" tap="{{ close }}" class="text-left action-item" row="0" col="0" /> 
      <Label text="{{ title }}" class="text-center action-title" row="0" col="1" />
    </GridLayout>
    <WebView id="webview" src="{{ url }}" class="w-full h-full" />
  </StackLayout>
</Page>
