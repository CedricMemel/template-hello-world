<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <Page.actionBar>
    <ActionBar class="action-bar">
      <ActionBar.titleView>
        <StackLayout class="action-title">
          <Label text="Your App" />
        </StackLayout>
      </ActionBar.titleView>
    </ActionBar>
  </Page.actionBar>
  <ScrollView>
    <StackLayout class="p-20">
      <Label text="Welcome to NativeScript" class="h2" />
      <StackLayout class="hr-light m-t-5 m-b-10"></StackLayout>
      <Label text="You are now set up to begin developing for iOS and Android. When getting started you may find the following resources helpful:" class="body m-b-5" textWrap="true" />

      <GridLayout rows="auto,auto" columns="auto,*" class="m-y-5">
        <Label text="-" class="m-r-10" rowSpan="2" col="0"  />
        <Label text="News and updates about NativeScript:" class="h4" textWrap="true" row="0" col="1" />
        <Label text="https://twitter.com/nativescript" tap="{{ viewTwitter }}" class="text-primary t-14" textWrap="true" row="1" col="1" />
      </GridLayout>

      <GridLayout rows="auto,auto" columns="auto,*" class="m-y-5">
        <Label text="-" class="m-r-10" rowSpan="2" col="0"  />
        <Label text="Help if you run into problems:" class="h4" textWrap="true" row="0" col="1" />
        <Label text="https://stackoverflow.com/questions/tagged/nativescript" tap="{{ viewHelp }}" class="text-primary t-14" textWrap="true" row="1" col="1" />
      </GridLayout>

      <GridLayout rows="auto,auto" columns="auto,*" class="m-y-5">
        <Label text="-" class="m-r-10" rowSpan="2" col="0"  />
        <Label text="A full example app that shows what NativeScript makes possible:" class="h4" textWrap="true" row="0" col="1" />
        <Label text="Search for “Examples NativeScript” in the iOS App Store or Google Play." class="h4" textWrap="true" row="1" col="1" />
      </GridLayout>
    </StackLayout>
  </ScrollView>
</Page>